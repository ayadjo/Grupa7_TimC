<Window x:Class="InitialProject.View.GuideWindows.GuideMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.View.GuideWindows"
        mc:Ignorable="d"
        Title="GuideMainWindow" Height="750" Width="430">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="210"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="55"/>
                        <RowDefinition Height="55"/>
                        <RowDefinition Height="55"/>
                        <RowDefinition Height="55"/>
                        <RowDefinition Height="55"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Button x:Name="MyTourssButton" Content="Ture" Click="MyTourssButton_Click"
                            Grid.Row="0" FontSize="20" Background="White" BorderBrush="White" HorizontalAlignment="Left" />
                    <Button x:Name="TodaysToursButton" Content="Današnje ture" Click="TodaysToursButton_Click" 
                            Grid.Row="1" FontSize="20" Background="White" BorderBrush="White" HorizontalAlignment="Left"/>
                    <Button x:Name="NotificationButton" Content="Obaveštenja" Click="NotificationButton_Click" 
                            Grid.Row="2" FontSize="20" Background="White" BorderBrush="White" HorizontalAlignment="Left"/>
                </Grid>
            </Grid>
        </Grid>

    </Grid>
</Window>