<UserControl x:Class="InitialProject.WPF.Views.Guest2Windows.MyTourRequestsWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InitialProject.WPF.Views.Guest2Windows"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Margin="0,20,0,10">Zahtevi</Label>
            <DataGrid 
                  ItemsSource="{Binding Path=Requests, UpdateSourceTrigger=PropertyChanged}"
                  SelectedItem="{Binding Path=SelectedRequest, UpdateSourceTrigger=PropertyChanged}"
                  AutoGenerateColumns="False" IsReadOnly="True" x:Name="myRequestsOverview" Height="105" Width="700">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Država" Binding="{Binding Location.Country}" Width="100"></DataGridTextColumn>
                    <DataGridTextColumn Header="Grad" Binding="{Binding Location.City}" Width="100"></DataGridTextColumn>
                    <DataGridTextColumn Header="Opis" Binding="{Binding Description}" Width="120"></DataGridTextColumn>
                    <DataGridTextColumn Header="Jezik" Binding="{Binding Language}" Width="100"></DataGridTextColumn>
                    <DataGridTextColumn Header="Broj gostiju" Binding="{Binding MaxGuests}" Width="100"></DataGridTextColumn>
                    <DataGridTextColumn Header="Opseg datuma" Binding="{Binding Start}" Width="*"></DataGridTextColumn>
                    <DataGridTextColumn Header="Opseg datuma" Binding="{Binding End}" Width="*"></DataGridTextColumn>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,50,0">
                <Button x:Name="Statistics" Height="35" Width="150" Background="#FFFFFF" Margin="0,0,20,0" Click="Statistics_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Images/Guest2/graph.png" Width="15" Height="15" Margin="0,0,5,0" />
                        <ContentControl Content="Statistika"></ContentControl>
                    </StackPanel>
                </Button>

                <Button x:Name="CreateRequest" Height="35" Width="150" Background="#FFFFFF" Click="CreateRequest_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Images/Guest2/pencil.png" Width="15" Height="15" Margin="0,0,5,0" />
                        <ContentControl Content="Kreiraj zahtev"></ContentControl>
                    </StackPanel>
                </Button>
            </StackPanel>

            <Label HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Margin="0,20,0,10">Složeni zahtevi</Label>
            <DataGrid 
                  AutoGenerateColumns="False" IsReadOnly="True" x:Name="myComplexRequestsOverview" Height="105" Width="700">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Država"  Width="100"></DataGridTextColumn>
                    <DataGridTextColumn Header="Grad"  Width="100"></DataGridTextColumn>
                    <DataGridTextColumn Header="Jezik"  Width="100"></DataGridTextColumn>
                    <DataGridTextColumn Header="Broj gostiju" Width="100"></DataGridTextColumn>
                    <DataGridTextColumn Header="Opseg datuma" Width="*"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>

            <Button x:Name="Rate" Height="35" Width="150" Background="#FFFFFF" HorizontalAlignment="Right" Margin="0,10,50,0" Command="{Binding Path=CreateComplexRequestCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/Images/Guest2/pencil.png" Width="15" Height="15" Margin="0,0,5,0" />
                    <ContentControl Content="Kreiraj složeni zahtev"></ContentControl>
                </StackPanel>
            </Button>

        </StackPanel>


    </Grid>
</UserControl>
