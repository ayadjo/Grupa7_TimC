<Window x:Class="InitialProject.WPF.Views.Guest2Window.TourReservationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.WPF.Views.Guest2Window"
        mc:Ignorable="d"
        Title="Rezervacija tura" Height="550" Width="600" WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Vertical">

        <StackPanel Orientation="Horizontal" Width="582" Height="402">

            <StackPanel Orientation="Vertical" Width="340" Margin="30,30,0,0">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <Image Source="/Resources/Images/hiking.png" Width="15" Height="15" Margin="0,0,5,0" />
                    <TextBlock Text="Naziv: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding SelectedTourEvent.Tour.Name}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <Image Source="/Resources/Images/earth.png" Width="15" Height="15" Margin="0,0,5,0" />
                    <TextBlock Text="Država: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding SelectedTourEvent.Tour.Location.Country}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <Image Source="/Resources/Images/skyscraper.png" Width="15" Height="15" Margin="0,0,5,0" />
                    <TextBlock Text="Grad: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding SelectedTourEvent.Tour.Location.City}"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <Image Source="/Resources/Images/translation.png" Width="15" Height="15" Margin="0,0,5,0" />
                    <TextBlock Text="Jezik: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding SelectedTourEvent.Tour.Languages}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <Image Source="/Resources/Images/group.png" Width="15" Height="15" Margin="0,0,5,0" />
                    <TextBlock Text="Maksimalan broj gostiju: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding SelectedTourEvent.Tour.MaxGuests}"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <Image Source="/Resources/Images/dateAndTime.png" Width="15" Height="15" Margin="0,0,5,0" />
                    <TextBlock Text="Datum i vreme početka: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding SelectedTourEvent.StartTime}"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <Image Source="/Resources/Images/duration.png" Width="15" Height="15" Margin="0,0,5,0" />
                    <TextBlock Text="Trajanje: " FontWeight="Bold" />
                    <TextBlock Text="{Binding SelectedTourEvent.Tour.Duration}"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20" Height="35">
                    <Image Source="/Resources/Images/tour.png" Width="15" Height="15" Margin="0,0,5,0" VerticalAlignment="Top" />
                    <TextBlock Text="Ključne tačke: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding SelectedTourEvent.Tour.TourPoints}"></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20" Height="50">
                    <Image Source="/Resources/Images/info.png" Width="15" Height="15" Margin="0,0,5,0" VerticalAlignment="Top"/>
                    <TextBlock Text="Opis: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding SelectedTourEvent.Tour.Description}"/>
                </StackPanel>


            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="0,30,0,0" Width="205">
                <Image Source="/Resources/Images/check.png" Width="100" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Center">
                    <Image Source="/Resources/Images/group.png" Width="15" Height="15" Margin="0,0,5,0" />
                    <TextBlock Text="Broj ljudi:" FontWeight="Bold" Margin="0,0,10,0"/>
                    <TextBox Text="{Binding NumberOfPeople}" Width="50"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Center" Width="120">
                    <TextBlock Text="{Binding AvailableSpotsText, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Text="{Binding AvailableSpots, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <DataGrid 
                  ItemsSource="{Binding Vouchers, UpdateSourceTrigger=PropertyChanged}"
                  SelectedItem="{Binding SelectedVoucher, UpdateSourceTrigger=PropertyChanged}"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  Width="205" Height="90" x:Name="myVoucherOverview" Margin="0,10,0,10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Naziv" Binding="{Binding Name}" Width="80"/>
                        <DataGridTextColumn Header="Važi do:" Binding="{Binding ExpirationDate}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <Button x:Name="CheckAvailability" Height="30" Width="130" Click="Check_Availability_Button_Click" Background="White" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Images/question-mark.png" Width="15" Height="15" Margin="0,0,5,0" />
                        <ContentControl Content="Proveri dostupnost"></ContentControl>
                    </StackPanel>
                </Button>

                <Button x:Name="Reserve" Height="30" Width="130" Click="Reserve_Click" Background="White" IsCancel="True" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Images/check.png" Width="15" Height="15" Margin="0,0,5,0" />
                        <ContentControl Content="Rezerviši"></ContentControl>
                    </StackPanel>
                </Button>




            </StackPanel>


        </StackPanel>

        <DataGrid DockPanel.Dock="Bottom"
                       SelectionMode="Single"
                  ItemsSource="{Binding Path=TourEvents, UpdateSourceTrigger=PropertyChanged}"
                  SelectedItem="{Binding Path=SelectedTourEvent, UpdateSourceTrigger=PropertyChanged}"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  Width="570" Height="106" Margin="0,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn  Header="Država" Binding="{Binding Tour.Location.Country}" Width="100"></DataGridTextColumn>
                <DataGridTextColumn  Header="Grad" Binding="{Binding Tour.Location.City}" Width="100"></DataGridTextColumn>
                <DataGridTextColumn  Header="Jezik" Binding="{Binding Tour.Languages}" Width="100"></DataGridTextColumn>
                <DataGridTextColumn  Header="Trajanje" Binding="{Binding Tour.Duration}" Width="100"></DataGridTextColumn>
                <DataGridTextColumn  Header="Vreme početka" Binding="{Binding StartTime}" Width="*"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</Window>
