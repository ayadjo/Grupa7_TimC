<Window x:Class="InitialProject.WPF.Views.Guest2Window.ToursOverviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.WPF.Views.Guest2Window"
        mc:Ignorable="d"
        Title="Prikaz i pretraga tura" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <DockPanel Background="#B7E6FF">
        <StackPanel Orientation="Horizontal">
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
        </StackPanel>
        <Grid DockPanel.Dock="Top">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />


            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" Margin="30,52,26,5" >
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>

                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
                    <StackPanel>
                        <Image Source="/Resources/Images/earth.png"  Height="16" Width="35" Margin="0,8,0,-5"/>
                        <Label Content="Država" Height="27" Width="50"/>
                    </StackPanel>
                    <TextBox x:Name="tbCountry" Text="{Binding Path=Country, UpdateSourceTrigger=PropertyChanged}" Height="19" Width="66"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
                    <StackPanel>
                        <Image Source="/Resources/Images/city.png"  Height="16" Width="35" Margin="0,8,0,-5"/>
                        <Label Content="Grad" Height="27" Width="39"/>
                    </StackPanel>
                    <TextBox x:Name="tbCity" Text="{Binding Path=City, UpdateSourceTrigger=PropertyChanged}" Height="19" Width="66"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="2">
                    <StackPanel>
                        <Image Source="/Resources/Images/people.png"  Height="16" Width="35" Margin="0,8,0,-5"/>
                        <Label Content="Broj ljudi" Height="27" Width="56" Margin="-3,0,0,0"/>
                    </StackPanel>
                    <TextBox x:Name="tbNumberOfPeople" Text="{Binding Path=NumberOfPeople, UpdateSourceTrigger=PropertyChanged}" Height="19" Width="66"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="3">
                    <StackPanel>
                        <Image Source="/Resources/Images/languages.png"  Height="16" Width="38" Margin="0,8,0,-5"/>
                        <Label Content="Jezik" Height="27" Width="40"/>
                    </StackPanel>
                    <TextBox x:Name="tbLanguage" Text="{Binding Path=Languages, UpdateSourceTrigger=PropertyChanged}" Height="19" Width="66"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="4">
                    <StackPanel>
                        <Image Source="/Resources/Images/duration.png"  Height="16" Width="38" Margin="0,8,0,-5"/>
                        <Label Content="Trajanje" Height="27" Width="52"/>
                    </StackPanel>
                    <TextBox x:Name="tbDuration" Text="{Binding Path=Duration, UpdateSourceTrigger=PropertyChanged}" Height="19" Width="66"/>
                </StackPanel>

               
                <Button Click="buttonSearch_Click" Grid.Row="0" Grid.Column="5" Height="30"  Margin="10,10,10,10">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Images/search.png" Width="15" Height="15" Margin="0,0,5,0" />
                        <ContentControl x:Name="buttonSearch" Content="Pretraži"></ContentControl>
                    </StackPanel>
                </Button>

            </Grid>
        </Grid>

        <Button x:Name="buttonReserve" DockPanel.Dock="Bottom" Content="Rezerviši" Margin="550,0,10,10" Width="70" Height="30" Click="buttonReserve_Click" ></Button>
        <Button x:Name="buttonMyTour" DockPanel.Dock="Bottom" Content="Moje ture" Margin="550,0,10,10" Width="70" Height="30" Click="buttonMyTour_Click" ></Button>
        
        <Button Height="31" Width="82" Click="LogOutButton_Click" DockPanel.Dock="Bottom">
            <StackPanel Orientation="Horizontal">
                <Image Source="/Resources/Images/logout.png" Width="15" Height="15" Margin="0,0,5,0" />
                <ContentControl x:Name="LogOutButton" Content="Odjavi se" ></ContentControl>
            </StackPanel>
        </Button>
        

        <DataGrid 
                  ItemsSource="{Binding Path=Tours, UpdateSourceTrigger=PropertyChanged}"
                  SelectedItem="{Binding Path=SelectedTour, UpdateSourceTrigger=PropertyChanged}"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  Width="750" Height="200" x:Name="tourOverview">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Naziv" Binding="{Binding Name}" Width="150"></DataGridTextColumn>
                <DataGridTextColumn Header="Država" Binding="{Binding Location.Country}" Width="150"></DataGridTextColumn>
                <DataGridTextColumn Header="Grad" Binding="{Binding Location.City}" Width="150"></DataGridTextColumn>
                <DataGridTextColumn Header="Trajanje" Binding="{Binding Duration}" Width="150"></DataGridTextColumn>
                <DataGridTextColumn Header="Jezik" Binding="{Binding Languages}" Width="150"></DataGridTextColumn>
                <DataGridTextColumn Header="Broj ljudi" Binding="{Binding MaxGuests}" Width="150"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>



    </DockPanel>
</Window>
