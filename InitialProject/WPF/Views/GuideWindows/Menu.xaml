<Page x:Class="InitialProject.WPF.Views.GuideWindows.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InitialProject.WPF.Views.GuideWindows"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="430"
      Title="Menu">

    <Grid Background="#FFDCDB">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="500"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1">
            <Button Style="{StaticResource RoundButtonStyle}" Height="100" Width="100">
                <Image Source="/Resources/Images/women.png" Height="80" Width="80"/>
            </Button>
            <Label Width="120" Style="{StaticResource BoldLabel}" FontSize="15" Foreground="#E80575" Content="Valentina Nikolić" Height="31"/>
        </StackPanel>
        <Button Grid.Row="2" Style="{StaticResource RoundButtonStyle}" FontSize="16" Content="Odjavi se" x:Name="LogOut" Click="LogOut_Click" Width="105" HorizontalAlignment="Right" Margin="0,293,10,159" />
    </Grid>
</Page>
